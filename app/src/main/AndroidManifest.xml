<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cctv.langduzhe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.Manifest.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />


    <application
        android:name=".LangDuZheApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".feature.WelcomeActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".feature.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".feature.mine.SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_settings" />

        <!--消息详情页面-->
        <activity android:name=".feature.message.MessageDetailActivity"
            android:screenOrientation="portrait" />
        <!-- 编辑昵称和头像页面 -->
        <activity android:name=".feature.mine.EditUserInfoActivity"
            android:screenOrientation="portrait"  />

        <!--阅读选择页面，背景半透明-->
        <activity android:name=".feature.read.ReadActivity"
            android:screenOrientation="portrait"
            android:theme="@style/translucent"/>
        <!--录制视频页面-->
        <activity android:name=".feature.read.RecordVideoActivity" />

        <!--录制音频页面-->
        <activity android:name=".feature.read.RecordVoiceActivity" />

        <!-- 视频录制完成预览页面-->
        <activity android:name=".feature.read.VideoPreviewActivity"
            android:screenOrientation="portrait" />
        <!-- 音频录制完成预览页面-->
        <activity android:name=".feature.read.VoicePreviewActivity"
            android:screenOrientation="portrait" />

        <!-- 首页视频详情页面-->
        <activity android:name=".feature.home.HomeVideoDetailActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />

        <!-- 我的朗读页面-->
        <activity android:name=".feature.mine.MineReadActivity"
            android:screenOrientation="portrait"/>

        <!-- 视频录制完成，保存或者上传页面-->
        <activity android:name=".feature.read.ReadOverActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />

        <!-- 朗读亭详情页面，包含音频视频两种情况-->
        <activity android:name=".feature.readPavilion.ReadPavilionDetailActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />


        <!-- 我的收藏页面-->
        <activity android:name=".feature.mine.MineCollectionActivity"
            android:screenOrientation="portrait"   />



        <!-- 录制音频完成页面-->
        <activity android:name=".feature.read.RecordVoiceOverActivity"
            android:screenOrientation="portrait" />


        <!-- 输入评论页面-->
        <activity android:name=".feature.CommentActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible|adjustPan"
            android:theme="@style/NoTitleDialogTheme"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.cctv.langduzhe.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths_public" />
        </provider>
    </application>

</manifest>