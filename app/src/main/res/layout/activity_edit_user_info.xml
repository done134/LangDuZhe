<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/layout_common_title"/>


    <LinearLayout
        android:id="@+id/ll_user_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:orientation="vertical">
        <com.cctv.langduzhe.view.widget.CircleImageView
            android:id="@+id/iv_user_head"
            android:layout_width="60dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="60dp"
            android:src="@mipmap/head_default_icon"/>


        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/c_8c8c8c"
            android:fontFamily="@font/songti"
            android:gravity="center_horizontal"
            android:text="点击修改头像"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_round_rectangle_eb">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/songti"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:paddingTop="2dp"
            android:text="昵称："/>

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/c_4c4c4c"
            android:hint="请输入昵称"
            android:background="@color/transparent"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/songti"
            android:textColor="@color/black"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_user_info"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_round_tangle_ff2b2b"
        android:fontFamily="@font/songti"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/action_submit"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />
</LinearLayout>