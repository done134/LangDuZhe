<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <TextView
            android:id="@+id/iv_record_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="录视频"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:textSize="14sp"
            android:textColor="@color/c_8c8c8c"
            android:drawableTop="@mipmap/record_video"/>
        <TextView
            android:id="@+id/iv_record_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="录音频"
            android:gravity="center"
            android:textSize="14sp"
            android:drawablePadding="10dp"
            android:textColor="@color/c_8c8c8c"
            android:drawableTop="@mipmap/record_voice"/>
    </LinearLayout>


    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="4dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:drawableTop="@mipmap/tab_read_cancel"/>


</LinearLayout>