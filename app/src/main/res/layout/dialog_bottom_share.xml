<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="bottom">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#f8f8f8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_share_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="朋友圈"
            android:textSize="12sp"
            android:layout_weight="1"
            android:paddingTop="30dp"
            android:paddingBottom="15dp"
            android:gravity="center"
            android:drawableTop="@mipmap/share_wechat_group_icon"
            android:textColor="@color/c_8c8c8c"
            android:background="@color/transparent"/>



        <Button
            android:id="@+id/btn_share_friends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="微信好友"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="15dp"
            android:drawableTop="@mipmap/share_wechat_friends_icon"
            android:layout_weight="1"
            android:textColor="@color/c_8c8c8c"
            android:background="@color/transparent"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_e6e6e6"/>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:text="取消"
        android:textSize="17sp"
        android:textColor="@color/c_8c8c8c"
        android:layout_height="50dp" />
</LinearLayout>