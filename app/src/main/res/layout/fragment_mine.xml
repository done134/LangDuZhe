<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <!--顶部布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/mine_top_bg"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="50dp"
            android:layout_height="68dp"
            android:background="@android:color/transparent"
            android:paddingTop="20dp"
            android:src="@mipmap/menu_icon" />
        <!--顶部布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <!--圆形头像-->
            <com.cctv.langduzhe.view.widget.CircleImageView
                android:id="@+id/iv_user_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/head_default_icon"
                app:civ_border_color="@color/head_border_color"
                app:civ_border_width="4dp" />

            <!--用户昵称-->
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="昵称"
                android:fontFamily="@font/songti"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <!--我的收藏和我的朗读-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btn_my_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/mine_collection_icon"
            android:gravity="center"
            android:padding="30dp"
            android:text="我的收藏"
            android:fontFamily="@font/songti"
            android:textColor="@color/c_8c8c8c" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/c_ecebeb" />

        <TextView
            android:id="@+id/btn_my_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/mine_read_icon"
            android:fontFamily="@font/songti"
            android:gravity="center"
            android:padding="30dp"
            android:text="我的朗读"
            android:textColor="@color/c_8c8c8c" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_ecebeb" />

    <!--关于我们和设置-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btn_mine_contribute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:fontFamily="@font/songti"
            android:drawableTop="@mipmap/mine_contributor_icon"
            android:gravity="center"
            android:padding="30dp"
            android:text="我的投稿"
            android:textColor="@color/c_8c8c8c" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/c_ecebeb" />

        <TextView
            android:id="@+id/btn_app_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/mine_set_icon"
            android:fontFamily="@font/songti"
            android:gravity="center"
            android:padding="30dp"
            android:text="设置"
            android:textColor="@color/c_8c8c8c" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_ecebeb" />

</LinearLayout>