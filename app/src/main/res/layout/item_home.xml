<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        <ImageView
            android:id="@+id/iv_home_video_cover"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:background="@color/c_ecebeb"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="bottom"
            android:src="@mipmap/shape_cover"/>
    </FrameLayout>
        <TextView
            android:id="@+id/tv_home_video_tag"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:gravity="center"
            android:text="第一季"
            android:fontFamily="@font/songti"
            android:textColor="@color/white"
            android:background="@drawable/shape_round_rectangle_bg"/>

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/songti"
            android:textStyle="bold"
            android:layout_gravity="bottom"/>
        <TextView
            android:id="@+id/tv_video_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/songti"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_gravity="bottom|end"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_video_play_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="286"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:textColor="@color/c_c8c8c8"
            android:includeFontPadding="false"
            android:fontFamily="@font/songti"
            android:maxLines="1"
            android:gravity="center"
            android:drawableLeft="@mipmap/play_count_icon_gray"/>

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="286"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:textColor="@color/c_c8c8c8"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_thumbs_count"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/songti"
            android:drawableLeft="@mipmap/comment_icon_gray"/>

        <com.cctv.langduzhe.view.widget.ClickNotToggleCheckBox
            android:id="@+id/tv_thumbs_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:text="286"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:drawablePadding="4dp"
            app:textColor="@color/c_c8c8c8"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/songti"
            android:button="@null"
            app:drawable="@drawable/selector_thumb_gray"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_ecebeb"/>
</LinearLayout>