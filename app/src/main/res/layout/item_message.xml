<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <com.cctv.langduzhe.view.widget.CircleImageView
        android:id="@+id/iv_service_people_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/message_service_head_icon"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:id="@+id/tv_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="系统消息"/>

    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/c_8c8c8c"
        android:layout_below="@+id/tv_message_title"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:text="尊敬的客户: 客户端计划在2017年06月06日
OO至21: 30进行信息系统升级维护工作
"/>

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="1分钟前"
        android:layout_marginTop="19dp"
        android:textColor="@color/c_4c4c4c"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_191919"
        android:layout_below="@+id/iv_service_people_icon"/>
</RelativeLayout>