<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_round_rectangle_eb">

            <cn.jzvd.JZVideoPlayerStandard
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/shape_cover"/>

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:text="摘自《牧羊少年奇幻之旅》"/>

            <TextView
                android:id="@+id/tv_video_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:drawablePadding="5dp"
                android:includeFontPadding="false"
                android:layout_alignTop="@+id/tv_video_title"
                android:paddingTop="3dp"
                android:layout_alignParentRight="true"
                android:text="03:04"/>


        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">


        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textColor="@color/ff2b2b"
            android:text="删除"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/shape_red_border_round_corner"
            />
        <TextView
            android:id="@+id/btn_upload"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:textColor="@color/white"
            android:text="发布"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/shape_round_tangle_ff2b2b"
            />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c_e6e6e6"/>




</LinearLayout>