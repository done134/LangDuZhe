<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_round_rectangle_c19">
            <TextView
                android:id="@+id/tv_voice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:paddingTop="3dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/btn_play"
                android:text="摘自《牧羊少年奇幻之旅》"/>

            <TextView
                android:id="@+id/tv_voice_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/c_4c4c4c"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:drawablePadding="5dp"
                android:paddingTop="3dp"
                android:drawableRight="@mipmap/voice_icon_3"
                android:layout_alignParentRight="true"
                android:text="03:04"/>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">


        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textColor="@color/ff2b2b"
            android:text="删除"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/shape_red_border_round_corner"
            />
        <TextView
            android:id="@+id/btn_upload"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:textColor="@color/white"
            android:text="发布"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/shape_round_tangle_ff2b2b"
            />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c_191919"/>


</LinearLayout>