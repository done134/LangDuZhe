<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_current_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_8c8c8c"
            android:text="00:00"
            android:textSize="15sp" />

        <SeekBar
            android:id="@+id/seekbar_voice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:indeterminateOnly="false"
            android:thumb="@mipmap/progress_point_icon"
            android:maxHeight="4dp"
            android:progressDrawable="@drawable/seekbar_drawable" />

        <TextView
            android:id="@+id/tv_total_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_8c8c8c"
            android:text="00:00"
            android:textSize="15sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:button="@drawable/selector_play_pause"/>
</LinearLayout>