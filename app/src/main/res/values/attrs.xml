<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义控件圆形ImageView中用到-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <!--自定义控件SwitchView中用到-->
    <declare-styleable name="SwitchView">
        <attr name="hasShadow" format="boolean" />
        <attr name="primaryColor" format="color" />
        <attr name="primaryColorDark" format="color" />
        <attr name="isOpened" format="boolean" />
    </declare-styleable>
    <declare-styleable name="SmoothInputLayout">
        <attr name="silDefaultKeyboardHeight" format="dimension"/>
        <attr name="silMinKeyboardHeight" format="dimension"/>
        <attr name="silInputView" format="reference"/>
        <attr name="silInputPane" format="reference"/>
        <attr name="silAutoSaveKeyboardHeight" format="boolean"/>
    </declare-styleable>
</resources>