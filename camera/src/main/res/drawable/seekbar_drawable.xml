<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--定义seekbar滑动条的底色-->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/c_ecebeb"
                android:centerY="0.75"
                android:endColor="@color/c_ecebeb"
                android:startColor="@color/c_ecebeb" />
        </shape>
    </item>
    <!--定义seekbar滑动条进度颜色-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/ff2b2b"/>
            </shape>
        </clip>
    </item>
</layer-list>